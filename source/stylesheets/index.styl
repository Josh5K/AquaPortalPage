body
    background linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url("../img/aquasitebackground_placeholder_2.png")
    background-size cover
    background-repeat no-repeat
    background-position center center
    text-align center
    font-family 'Roboto', sans-serif
    margin-bottom 150px

img
    &.logo
        width 280px
        display block
        margin auto
        padding-top 50px
        max-width 100%
        -moz-transition all 0.3s
        -webkit-transition all 0.3s
        transition all 0.3s
        &:hover
            -moz-transform scale(1.1)
            -webkit-transform scale(1.1)
            transform scale(1.1)

div
    &.image-menus
        display inline-block
        color #ffffff
        padding 60px
        text-align center
        font-weight 800
        max-width 100%
        -moz-transition all 0.3s
        -webkit-transition all 0.3s
        transition all 0.3s
        &:hover
            -moz-transform scale(1.1)
            -webkit-transform scale(1.1)
            transform scale(1.1)

p
    color white
    padding-top 10px
    font-size 20px

@media (max-width:991px)
    div
        &.image-nav
            display block
            margin auto